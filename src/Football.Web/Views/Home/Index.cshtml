@model IEnumerable<Football.Team>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageScript
{
    <script type="text/javascript">
        // coming soon
    </script>
}

<div class="row">
    
    <div class="jumbotron">
        <h1>EPL Standings</h1>
        <p>
            Welcome to the latest english premier league table. If the
            season finishes with the current standings, the button will highlight what will happen
            to the teams...
        </p>
        <p><a href="#" class="btn btn-primary btn-lg" role="button">Go &raquo;</a></p>
    </div>

    <div class="col-md-12">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Position</th>
                    <th>Team</th>
                    <th>Goals For</th>
                    <th>Goals Against</th>
                    <th>Points</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Position</td>
                        <td>@m.Name</td>
                        <td>@m.GoalsFor</td>
                        <td>@m.GoalsAgainst</td>
                        <td>@m.Points</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>